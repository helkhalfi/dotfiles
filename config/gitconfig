[core]
  excludesfile = ~/.gitignore_global
  attributesFile = ~/.gitattributes_global
	pager = diff-so-fancy | less --tabs=4 -RFX
[pager]
  diff = "diff-so-fancy | less --tabs=1,5 -RFXM"
  show = "diff-so-fancy | less --tabs=1,5 -RFXM"
[credential]
  helper = osxkeychain
[http]
	postBuffer = 524288000
[filter "lfs"]
  clean = git-lfs clean %f
  smudge = git-lfs smudge %f
  required = true
[commit]
  gpgsign = false
[push]
  default = simple
[fetch]
  # Prune branches that no longer exist remote.
  # Same for tags.
  prune = true
  pruneTags = true
[user]
  useConfigOnly = true
	name = Hichame El Khalfi
	email = hichame@elkhalfi.com
[diff]
  indentHeuristic = on
  noprefix = true
[diff "nodiff"]
	command = true
[rerere]
  # Remember my merges
  # http://gitfu.wordpress.com/2008/04/20/git-rerere-rereremember-what-you-did-last-time/
	enabled = 1
[submodule]
	recurse = true
	fetchJobs = 0

# Colors
[color]
  ui = true
[color "diff-highlight"]
	oldNormal = red bold
	oldHighlight = red bold 52
	newNormal = green bold
	newHighlight = green bold 22
[color "diff"]
	meta = 11
	frag = magenta bold
	commit = yellow bold
	old = red bold
	new = green bold
	whitespace = red reverse

# Aliases:
[alias]
  publish = "!git push origin $(git symbolic-ref --short HEAD) -u"

# Allow local customizations in the .gitconfig_local file
[include]
  path = ~/.gitconfig_local
[init]
	defaultBranch = main
[pull]
	rebase = false
